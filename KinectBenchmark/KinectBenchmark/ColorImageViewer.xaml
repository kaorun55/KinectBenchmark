<UserControl x:Class="KinectBenchmark.ColorImageViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KinectBenchmark"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Width="300" Height="300">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Color"/>
            <Border Height="5"/>
            <CheckBox x:Name="IsProcess" Content="処理する" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
            <Border Height="5"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="フレームレート "/>
                <TextBlock x:Name="TextFps" Text="0" Width="20" TextAlignment="Right"/>
                <TextBlock Text=" FPS"/>
            </StackPanel>
            <Border Height="5"/>
            <Image x:Name="ImageColor"/>
        </StackPanel>
    </Grid>
</UserControl>
